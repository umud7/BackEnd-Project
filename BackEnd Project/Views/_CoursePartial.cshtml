@model List<Course>


    @foreach (var item in Model)
                  {
                       <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@item.CourseDetail.Name.ToLower()">
                            <div class="img">
                                <a href="">
                                    @if (item.CourseImages.Count>0)
                                    {
                                    <img src="~/img/@(item.CourseImages.FirstOrDefault(i=>i.IsMain)!=null?item.CourseImages.FirstOrDefault(i=>i.IsMain).ImageUrl:item.CourseImages.FirstOrDefault().ImageUrl)" class="img-fluid" alt="">
                                }
                                else
                                {
                                    <img src="~/img/avatar2.jpeg" class="img-fluid" alt="">
                                }

                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">$259</span>
                            </div>
                        </div>
                    </div>
                  }



