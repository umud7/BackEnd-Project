@model List<Teacher>
@{
    Layout = null;
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher">
                <div class="single-teacher-img">
                    <a asp-action="detail" asp-route-id="@item.Id"><img src="~/img/teacher/@item.ImageUrl" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a asp-action="detail" asp-route-id="@item.Id">@item.FullName</a></h2>
                    <h4>Associate Professor</h4>
                    <ul>
                        <li><a href=@item.SocialPage.Facebook><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href=@item.SocialPage.Pinterest><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href=@item.SocialPage.Vimeo><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href=@item.SocialPage.Twitter><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>